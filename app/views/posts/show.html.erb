<div class="container"> 
  <%= render @post %>
  <div>
  <% if user_signed_in? %>
  <% if current_user.id == @post.user_id%>
    <%= link_to "Edit this post", edit_post_path(@post), class:"btn btn-warning btn-sm" %> |
    <%= button_to "Destroy this post", @post, method: :delete, class:"btn btn-danger" %>
    <%end%>
  <% end %>
    <%= link_to "Back to posts", posts_path, class:"btn btn-secondary btn-sm" %>
  </div>

</>

<div class="container">
  <%= render 'comments/form', 
    post: @post,
    comment: @post.comments.build,
    submit_label: "Reply" %>
  <% @comments.each do |comment| %>
    <%= render 'comments/comment', 
    post: @post, 
    comment: comment %>
  <% end %>
</div>